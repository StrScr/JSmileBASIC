/* Non Terminals */

non terminal empty;
non terminal CONTENIDO, Comp, S1;

empty ::= /* nothing */;

Comp ::= EQ
        |EQEQ
        |NOTEQ
        |LT
        |LTEQ
        |GT
        |GTEQ
        ;

CONTENIDO ::= CONTENIDO IF
