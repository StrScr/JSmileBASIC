/*IF*/
S1 ::=  IF LPAREN IDENTIFIER_INTEGER Comp IDENTIFIER_INTEGER RPAREN 
      | IF LPAREN IDENTIFIER_INTEGER Comp IDENTIFIER_INTEGER ANDAND IDENTIFIER_INTEGER Comp IDENTIFIER_INTEGER RPAREN  
